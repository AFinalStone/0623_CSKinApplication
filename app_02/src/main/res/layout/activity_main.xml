<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_02"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_name"
        style="@style/UikitTextView"
        android:text="@string/text_hello" />

    <com.resources.change.view.MyTextView
        style="@style/UikitTextView"
        android:text="@string/text_hello" />

    <Button
        android:id="@+id/btn_change_skin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/change_skin_btn_bg"
        android:text="@string/text_change_skin"
        android:textColor="@color/btn_change_skin_color"
        android:textSize="@dimen/common_text_size" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:src="@mipmap/background_01" />

    <Button
        android:id="@+id/btn_show_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示弹窗" />

    <Button
        android:id="@+id/btn_back_defalut_skin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="返回默认皮肤" />
</LinearLayout>